@font-face
  font-family 'Arial-Bold'
  src url('../fonts/Arial-Bold.woff'), url('../fonts/Arial-Bold.woff2')
  font-display swap
@font-face
  font-family 'Arial-Regular'
  src url('../fonts/Arial-Regular.woff'), url('../fonts/Arial-Regular.woff2')
  font-display swap

@font-face
  font-family 'MyriadPro-Bold'
  src url('../fonts/MyriadPro-Bold.woff'), url('../fonts/MyriadPro-Bold.woff2')
  font-display swap
@font-face
  font-family 'MyriadPro-Regular'
  src url('../fonts/MyriadPro-Regular.woff'), url('../fonts/MyriadPro-Regular.woff2')
  font-display swap
@font-face
  font-family 'MyriadPro-Semibold'
  src url('../fonts/MyriadPro-Semibold.woff'), url('../fonts/MyriadPro-Semibold.woff2')
  font-display swap


@import 'common/variables'
@import 'common/*'
@import 'components/*'

body
  margin 0 auto
  font-size 18px
  font-family 'Arial-Regular'
  font-weight 400
  line-height 120%
  color $color-white

.layout
  width 100%
  height 100%
  margin 0 auto
  display flex
  flex-direction column
  overflow-x hidden
.main
  flex 1

.wrapper
  max-width 320px
  margin 0 auto
  padding 0 6px
  width 100%
  +above($breakpoints.sm)
    max-width 750px
    padding 0 12px
  +above($breakpoints.md)
    max-width 996px
    padding 0 15px
  +above($breakpoints.xxl)
    padding 0 20px
    max-width 1220px
