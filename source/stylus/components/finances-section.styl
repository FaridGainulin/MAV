.finances-section
  background: linear-gradient(192deg, #ef3e42 0%, #c41230 85%);

  &__container
    position relative
    z-index 1
    padding 20px 0
    text-align: center
    +above($breakpoints.sm)
      padding 50px 0 40px
    +above($breakpoints.md)
      padding 80px 0 70px
    +above($breakpoints.xxl)
      padding 100px 0 84px

  &__img-bg
    position: absolute
    z-index -1
    height: auto;
    top: 5.3%;
    left: 50%;
    transform: translateX(-53.3%);
    width: 580px;
    +above($breakpoints.sm)
      width: 760px;
    +above($breakpoints.md)
      width: 1035px;
    +above($breakpoints.xxl)
      width 1314px

  &__sub-title
    padding 15px 0 20px
    +above($breakpoints.sm)
      padding 20px 0 30px
    +above($breakpoints.md)
      padding 25px 0 45px
    +above($breakpoints.xxl)
      padding 30px 0 60px

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-wrap: wrap
      justify-content center
      gap: 10px
    +above($breakpoints.md)
      gap: 20px

  &__card
    width 280px !important
    background-color transparent
    border: 2px solid #fff
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    padding-top 20px
    height: 100px
    +above($breakpoints.sm)
      width 235px !important
      gap: 7px
      padding-top 25px
      height: 110px
    +above($breakpoints.md)
      width: 308px !important;
      padding-top 30px
      height: 135px
    +above($breakpoints.xxl)
      width 380px !important
      padding-top 38px
      height: 160px
    &--black
      background-color #000
      border none
    &--white
      background-color #fff
      border none

  &__bottom
    width 100%
    display: flex
    flex-direction: column
    align-items: center
    margin-top 20px
    +above($breakpoints.sm)
      margin-top 30px
    +above($breakpoints.md)
      margin-top 45px
    +above($breakpoints.xxl)
      margin-top 60px

  &__bottom-text
    padding 10px 0 15px
    +above($breakpoints.sm)
      padding 15px 0 20px
    +above($breakpoints.md)
      padding 18px 0 25px
    +above($breakpoints.xxl)
      padding 20px 0 30px

  &__form
    display: flex
    flex-direction: column
    gap: 8px
    +above($breakpoints.sm)
      flex-direction: row
      gap: 12px
    +above($breakpoints.md)
      gap: 16px
    +above($breakpoints.xxl)
      gap: 20px
    & > *
      width 280px !important
      +above($breakpoints.sm)
        width 200px !important
      +above($breakpoints.md)
        width 240px !important
      +above($breakpoints.xxl)
        width 280px !important
