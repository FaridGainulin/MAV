.form-modal
  &__feedback
    position relative
    padding: 12px
    background: linear-gradient(215deg, #c41230 0%, #ef3e42 100%);
    box-shadow: 0px 2px 8px 0px rgba(255, 255, 255, 0.8)

  &__wrapper
    padding 10px
    border-radius: 15px;
    +above($breakpoints.sm)
      padding 15px
    +above($breakpoints.xxl)
      padding: 20px

  &__info-title
    font-size: 16px;
    margin: 0 0 18px 0
    font-family: 'MyriadPro-Bold'
    text-transform: uppercase
    font-weight: 700
    line-height 120%
    +above($breakpoints.sm)
      font-size: 17px
    +above($breakpoints.md)
      line-height 114%
      font-size: 18px
      margin: 0 0 40px 0
    +above($breakpoints.xxl)
      font-size: 23px
    br
      display: block

  &__feedback-item
    max-width: 255px
    margin: 0 auto
    +above($breakpoints.sm)
      max-width: 280px
    +above($breakpoints.xxl)
      max-width: 343px

  &__feedback-input
    height: 45px
    margin-bottom: 10px
    +above($breakpoints.sm)
      height: 50px
      margin-bottom: 15px
    +above($breakpoints.md)
      height: 55px
    +above($breakpoints.xxl)
      height: 60px
      margin-bottom: 20px
    .input
      &__field
        height: 100%
        border: none

  &__button
    margin-bottom: 20px
    .btn
      height: 45px
      font-size: 12px !important
      +above($breakpoints.sm)
        font-size: 14px !important
        height: 50px
      +above($breakpoints.md)
        font-size: 15px !important
        height: 55px
      +above($breakpoints.xxl)
        font-size: 16px !important
        height: 60px

  &__agree
    font-size: 10px;
    line-height: 13px;
    font-family: 'Arial-Regular'
    position relative
    +above($breakpoints.sm)
      font-size: 11px;
      line-height: 13px;
    +above($breakpoints.md)
      font-size: 11px;
      line-height: 14px;
    +above($breakpoints.xxl)
      font-size: 13px;
      line-height: 15px;
    a
      text-decoration: underline
