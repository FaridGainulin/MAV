.city-section
  background-image: url('../images/city-section-bg.jpg')
  background-repeat: no-repeat
  background-size: cover
  background-position: center
  background-color #C41230

  &__container
    position relative
    z-index 1
    text-align: center
    padding 20px 0
    +above($breakpoints.sm)
      padding 50px 0 30px
    +above($breakpoints.md)
      padding 70px 0 35px
    +above($breakpoints.xxl)
      padding 100px 0 40px

  &__sub-title
    color: $color-white-80
    padding 30px 0 25px
    +above($breakpoints.sm)
      padding 40px 0 30px
    +above($breakpoints.md)
      padding 50px 0 35px
    +above($breakpoints.xxl)
      padding 60px 0 40px

  &__form
    display: flex
    flex-direction: column
    align-items: center
    gap: 8px
    margin-bottom 30px
    +above($breakpoints.sm)
      flex-direction: row
      justify-content center
      gap: 12px
      margin-bottom 60px
    +above($breakpoints.md)
      gap: 16px
      margin-bottom 90px
    +above($breakpoints.xxl)
      gap: 20px
      margin-bottom 126px
    & > *
      width 280px !important
      +above($breakpoints.sm)
        width 200px !important
      +above($breakpoints.md)
        width 240px !important
      +above($breakpoints.xxl)
        width 280px !important
