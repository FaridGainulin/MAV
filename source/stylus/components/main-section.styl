.main-section
  background-image: url('../images/main-section-bg.jpg')
  background-repeat: no-repeat
  background-size: cover
  background-position: center
  background-color #F5F5F5

  &__container
    position relative
    z-index 1
    padding 15px 0 0
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      padding 25px 0 50px
    +above($breakpoints.md)
      padding 40px 0 70px
    +above($breakpoints.xxl)
      padding 50px 0 99px

  &__title
    display: flex
    flex-direction: column
    align-items: center
    gap: 10px
    margin 20px 0 15px
    +above($breakpoints.sm)
      align-items: flex-start
      margin 60px 0 25px
    +above($breakpoints.md)
      gap: 20px
      margin 90px 0 35px
    +above($breakpoints.xxl)
      margin 131px 0 44px

  &__text
    padding 15px 0
    +above($breakpoints.sm)
      padding 20px 0
    +above($breakpoints.md)
      padding 25px 0
    +above($breakpoints.xxl)
      padding 30px 0

  &__form
    display: flex
    flex-direction: column
    gap: 8px
    width 280px
    margin 0 auto
    +above($breakpoints.sm)
      margin 0
      gap: 12px
      width 200px
    +above($breakpoints.md)
      gap: 16px
      width 240px
    +above($breakpoints.xxl)
      gap: 20px
      width 280px

  &__img
    width 100%
    height: auto
    margin: 20px 0 0
    +above($breakpoints.sm)
      margin 0
      position: absolute
      z-index -1
      width: 680px;
      bottom: 0;
      right: -155px;
    +above($breakpoints.md)
      width: 930px;
      right: -220px;
    +above($breakpoints.xxl)
      width 1176px
      right: -370px
